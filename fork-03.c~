#include <stdio.h>
#include <string.h>
#include <sys/types.h>

#define MAX_COUNT 200
#define BUF_SIZE 100

void ChildProcess(char [], char []);

int main (void) {
  pid_t pid1, pid2, pid;
  int status;
  int i;
  char buf[BUF_SIZE];

  printf("Forking baby 1...\n");

  pid1=fork();

  if (pid1<=0){
    printf("Ooopss..\”");
    exit(1);
  }
  else if (pid1==0){
    printf("I am the first child!\n");
  }

   printf("Forking baby 2...\n");

   if (pid2=fork()<=0){
    printf("2nd: Ooopss..\”");
    exit(1);
  }
  else if (pid1==0){
    printf("I am the second child!\n");
  }
}
